<launch>
  <node pkg="move_base" type="move_base" respawn="false" name="move_base_node" output="screen">
    <!--param name="base_local_planner" value="eband_local_planner/EBandPlannerROS"/-->
    <param name="footprint_padding" value="0.02" />
    <param name="controller_frequency" value="10.0" />
    <param name="controller_patience" value="3.0" />
    <param name="oscillation_timeout" value="30.0" />
    <param name="oscillation_distance" value="0.5" />
    <!--param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" /-->
    <!--param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" /-->

    <rosparam file="$(find silbot3_navigation)/silbot3_config/costmap_common_params.yaml" command="load" ns="global_costmap/obstacles" />
    <rosparam file="$(find silbot3_navigation)/silbot3_config/costmap_common_params.yaml" command="load" ns="local_costmap/obstacles" />
    <rosparam file="$(find silbot3_navigation)/silbot3_config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find silbot3_navigation)/silbot3_config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find silbot3_navigation)/silbot3_config/base_local_planner_params.yaml" command="load" />
    <!--rosparam file="$(find silbot3_navigation)/silbot3_config/dwa_local_planner_params.yaml" command="load" /-->
    <!--rosparam file="$(find silbot3_navigation)/silbot3_config/eband_local_planner_params.yaml" command="load" /-->
    <!--rosparam file="$(find silbot3_navigation)/silbot3_config/teb_local_planner_params.yaml" command="load" /-->
  </node>
</launch>
